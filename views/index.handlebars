
<div class="container">
  <div class="jumbotron">
    <h1>Burger Bench</h1>
    <img src="assets/images/burger.jpg" alt="Burgers" />       
  </div>
  <div class="container intro">
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="burger">Enter a Burger:</label>
        <input type="text" id="burger" name="burgerName">
      </div>
      <button id="addburger" type="submit" class="btn btn-success btn-sm">Add Burger</button>
    </form>
  </div> 
<br>
  <div class="burgersReadyToEat panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Burgers to Eat!</h3>
    </div>
    <div class="panel-body">
      <div>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}

              <form  method="PUT">
                <button type="submit" id="{{this.id}}" class="devouredburger btn btn-warning btn-sm">Devour!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-1">
  </div>

  <div class="burgersEaten panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Devoured Burgers!</h3>
    </div>
    <div class="panel-body">
      <div>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}

            </li>
          {{/if}}
        {{/each}}
      </div>

    </div>
  </div>
      
</div>
